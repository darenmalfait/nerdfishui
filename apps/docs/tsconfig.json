{
  "extends": "@nerdfish/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "verbatimModuleSyntax": false,
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "./**/*.js",
    "./**/*.ts",
    "./**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.js",
    "next.config.mjs",
    "postcss.config.cjs"
  ],
  "exclude": ["node_modules", ".next", "public"]
}
