{
	"extends": "@nerdfish/config/typescript",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"],
			"~/content/*": ["content/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"incremental": true,
		"jsx": "preserve",
		"strictNullChecks": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": [
		"./**/*.js",
		"./**/*.jsx",
		"./**/*.ts",
		"./**/*.tsx",
		".next/types/**/*.ts",
		"next-env.d.ts",
		"next.config.mjs",
		"postcss.config.cjs"
	],
	"exclude": ["node_modules", ".next", "public"]
}
