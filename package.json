{
  "name": "nerdfishui",
  "private": true,
  "author": "Daren Malfait <daren@nerdfish.be> (https://nerdfish.be)",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "changeset:release": "changeset publish",
    "changeset:version": "changeset version && pnpm install --no-frozen-lockfile && git add .",
    "checks": "turbo lint typecheck --continue",
    "checks:fix": "turbo lint:fix typecheck --continue --force",
    "clean": "turbo clean && rm -rf node_modules && rm -rf .turbo",
    "dev": "turbo run dev --no-cache --continue",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint . --cache --cache-location \"node_modules/.cache/.eslintcache\" --max-warnings 0",
    "lint:fix": "eslint . --fix --cache --cache-location \"node_modules/.cache/.eslintcache\" --max-warnings 0",
    "prepare": "husky install",
    "release": "turbo run build --filter=docs^... && changeset publish",
    "vercel-build": "turbo build"
  },
  "dependencies": {
    "tailwind": "^4.0.0",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "eslint": "^8.56.0",
    "eslint-config-daren": "^4.2.3",
    "husky": "^9.0.6",
    "turbo": "^1.11.3"
  },
  "packageManager": "pnpm@8.15.0"
}
